extends layout

block content
	h1 #{title}
	form(method='POST',action='/articles/edit/'+ article_data._id)
		#form-group
			label Title:
			input.form-control(name='title',type="text",value= article_data.title)
		#form-group
			label Body:
			textarea.form-control(name='body')= article_data.body
		br
		input.btn.btn-primary(type='submit',value='Submit')
		
